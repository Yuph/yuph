<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Yuph</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
	<%= analytics_init if Rails.env.production? %>
</head>
<body>
<div class="top">
<% if logged? %>
		<div class="menu-top">
			<div class="container_12">
				<ul id="navbar">
					<li class="grid_1">
						<%=link_to image_tag('logo.png'), "/" %>
					</li>
					<li class="grid_1 push_10 engine">
						<a>mais</a>
					</li>
					<li class="grid_1 push_10">
						<a>blog</a>
					</li>
				</ul>
				<div class="navbar-dropdown">
					<a href="<%= user_path(session[:user]) %>">seu perfil</a>
					<a href="/logout">sair</a>
				</div>
			</div>
		</div>
		<% else %>
		<div class="menu-top">
			<div class="container_12">
			<ul id="navbar">
				<li class="grid_1 push_8 login">
					<a href="">login</a>
				</li>
				<li class="grid_2 push_8">
					<%= link_to 'criar conta', new_user_path %>
				</li>
				<li class="grid_1 push_8">
					<a>blog</a>
				</li>
			</ul>
		</div>
	</div>
	<div class="container_12">
		<div class="grid_4 push_8">
			<div class="new-login main-login wrapper">
				<div class="main-form">
				<h1>Entre na yuph</h1>
				<form name="login" action="/login" method="POST">
		             <input type="text" name="user[email]" placeholder="Email" />
					<input type="password" name="user[password]" placeholder="senha" />
		            <%= token_tag nil %>
		            <input type="submit" value="login" />
		        </form>
		        <div class="fb-login-button">
		            <form action="/auth/facebook"><button type="submit" class="fb-button">Facebook</button></form>
		        </div>
		    </div>
	    </div>
	</div>
	</div>
<% end %>
<div class="clear"></div>
</div>
	<div class="content">
		<%= yield %>
	</div>
</body>
</html>
