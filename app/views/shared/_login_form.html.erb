<div class="main-form">
  <h1><%= t('.title') %></h1>
  <%= form_for(:user, url: user_session_path, html: {name: 'login'}) do |f| %>
    <%= f.text_field :email, :placeholder => 'Email' %>
    <%= f.password_field :password, :placeholder => 'Senha' %>
    <%= token_tag nil %>

    <div>
    <% if Devise.mappings[:user].rememberable? -%>
      <div class="remember-me"><%= f.check_box :remember_me %> <%= f.label t('.remember_me') %> </div>
    <% end -%>

    <%= f.submit 'login' %>
    </div>
  <% end %>

  <div class="forgot-password">
    <%= link_to t('.forgot_password'), new_password_path(:user) %>
  </div>

  <%= link_to "Facebook", user_omniauth_authorize_path(:facebook), :class => 'fb-button' %>

</div>