.notification-content
  .notification-header
    .notification-header-portrait
      = link_to activity.trackable do
        %img{:alt => "thumb", :class => "user-portrait", :src => activity.trackable.profile_image}

  .notification-description
    = t("public_activity.#{activity.key}_html", :user => link_to(activity.trackable.nick, user_path(activity.trackable)))
    <br>

    = render 'public_activity/date', :activity => activity

  .clear
