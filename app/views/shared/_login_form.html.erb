<section class="box-login">

  <%= link_to image_tag("logo-yuph-quem-somos.png"), root_path %>


  <%= form_for(:user, url: user_session_path, html: {:class => 'pure-form pure-form-stacked'}) do |f| %>
    
    <label for="email">Email</label>
    <%= f.text_field :email, :placeholder => 'Email', :class => "cheio" %>
    <br/>
    <label for="password">Senha</label>
    <%= f.password_field :password, :placeholder => 'Senha', :class => "cheio" %>
    <br/>
    <%= token_tag nil %>

    <% if Devise.mappings[:user].rememberable? -%>
      <div class="remember-me"><%= f.check_box :remember_me %> <%= t('.remember_me') %> </div>
    <% end -%>
    <br/>

    <%= f.submit 'login', :class => "pure-button pure-button-primary" %>
  <% end %>

  <div class="forgot-password">
    <%= link_to t('.forgot_password'), new_password_path(:user) %>
  </div>

   <div class="fb-login-button">
     <form action="/auth/facebook"><button type="submit" class="fb-button">Facebook</button></form>
   </div>
</section>