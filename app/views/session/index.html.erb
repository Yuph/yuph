    <div class="grid_4 main-ideas">
        <h2>
            Ideias dentro da Yuph:
        </h2>
    </div>
    <div class="clear"></div>
</div>
<div class="container_12 idea-row">
	<% @ideas.each do |idea| %>
    <div class="grid_3 wrapper min-idea">
        <div class="green-line"></div>
        <%= link_to image_tag(idea.image.url(:thumb)), idea_path(idea) %>
        <h2>
            <%= idea.name %>
        </h2>
        <p>
            <%= idea.mini_description %>
        </p>
        <div class="red-line"></div>
    </div>
	<% end %>
</div>
<div class="clear"></div>
<div class="container_12">
	<%= button_to "mostrar mais", "/ideas/", :method => "get", class: "grid_8 push_2 show-more wrapper"  %>
